{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "strict": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "outDir": "extension/dist",
    "rootDir": "extension/src",
    "types": ["chrome"],
    "skipLibCheck": true
  },
  "include": ["extension/src/**/*.ts"]
}
